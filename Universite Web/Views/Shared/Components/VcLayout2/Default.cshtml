@inject IHttpContextAccessor _httpContext
@inject UserManager<IdentityUser> _userManager
@inject SignInManager<IdentityUser> _signInManager
@model VmLayout
 
<div class="footer2">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col">
                    <p><i class="far fa-envelope"></i>@Model.settings.Email</p>
                </div>
                <div class="col">
                    <p><i class="fas fa-map-marker-alt"></i> @Model.settings.Adress</p>
                </div>
                <div class="col">
                    <p><i class="fas fa-phone fa-rotate-90"></i>@Model.settings.Phone</p>
                </div>
                <div class="col text-center social">
                    @foreach (var item in Model.Socials)
                    {
                        <a href="@item.Link"><i class="@item.Icon"></i></a>

                    }

                </div>
                <div class="col text-right mt-2">
                    @if (_signInManager.IsSignedIn(User))
                    {
                        <a class=" btn btn-secondary  ">@_userManager.GetUserName(User)</a>

                        <a class="btn btn-secondary mt-1 " asp-controller="userlogin" asp-action="Logout">Logout</a>

                    }
                    else
                    {

                        <a class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#myModal" href="" @*asp-controller="AccountUser" asp-action="login"*@>
                            Giriş
                        </a>
                        <a class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#tModal" href="" @*asp-controller="AccountUser" asp-action="login"*@>
                            Muellim Ucun Giriş
                        </a>
                    }


                </div>
            </div>
           

        </div>
    </div>
</div>

 

<nav class="navbar navbar-expand-lg navbar-light  ">
    <div class="container ">
        <a class="navbar-brand " href="#"><img class="img-fluid" src="~/Uploads/@Model.settings.Logo" alt=""></a>
 